<% else %>

<div class="order-overview">
  <div class="order-products">
    <div class="order-products-text">
      <h2>Wines</h2>
      <hr>
      <div class="product-list">
        <% @order_items.each do |item| %>
        <div id="product-each" class="card-product card-product-orders">
          <div class="fruit-img"><%= image_tag('dose.png', class:"fruiticontwo") %></div>
          <div class="card-product-infos">
            <h2 class="wine-name-cart"><%= item.wine.name %></h2>
            <p><%= item.wine.description %></p>
            <p><%= humanized_money_with_symbol(item.wine.price) %></p>
          </div>
          <div class="delete-cross">
            <%= link_to order_item_path(item), method: :delete  do %>
              <i class="fas fa-times"></i>
            <% end %>
          </div>
        </div>
        <% end %>
      </div>
      <%= link_to wines_path do %>
      <div class="wacky-btn">
        <p>Back To Shop</p>
      </div>
      <% end %>
    </div>
  </div>
  <div class="order-price">
