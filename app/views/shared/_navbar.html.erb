<div class="navbar navbar-expand-sm navbar-light navbar-lewagon" id="nav">
  <div class="navbar-left">
    <%= link_to wines_path do %>
    <div class="wacky-btn">
      <p>Shop</p>
    </div>
    <% end %>

    <div class="search-btn">
      <%= link_to "Home", root_path %>
    </div>
  </div>

  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>

  <%= link_to root_path do %>
  <div class="nav-bar-logo">
    <h3>Wacky / Wine</h3>
  </div>
  <% end %>

  <div class="navbar-right">
    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav mr-auto">
        <li class="nav-item">
          <%= link_to "About Us", "/pages/about", class: "nav-link" %>
        </li>
        <li class="nav-item">
          <%= link_to "Contact Us", "/pages/contact", class: "nav-link" %>
        </li>
        <li class="nav-item active">
          <%= link_to orders_path, class: "nav-link" do %>
          <i class="fas fa-box-open"></i>
          <% end %>
        </li>
        <% if user_signed_in? %>
        <li class="nav-item">
          <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "nav-link" %>
        </li>


        <% else %>
        <li class="nav-item">
          <%= link_to "Login", new_user_session_path, class: "nav-link" %>
        </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>



