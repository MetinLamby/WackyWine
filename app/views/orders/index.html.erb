      <hr>
      <div class="details-text">
        <div class="details-text-inner">
          <p>Subtotal</p>
          <p><%= humanized_money_with_symbol(@order.amount) %></p>
        </div>
        <div class="details-text-inner">
          <p>Shipping</p>
          <p>Free</p>
        </div>
        <div class="details-text-inner">
          <p>Total</p>
          <p>€<%= @wine_prices/100 %></p>
        </div>
      </div>
      <%= link_to new_order_payment_path(@order) do %>
      <div class="wacky-btn">
        <p>Checkout</p>
      </div>
      <% end %>
    </div>
  </div>
</div>
<% end %>





<script type="text/javascript">


  // this is the js for the order index page

const product = document.querySelectorAll(".card-product-orders")

function checkconditionfour(x){
  if (x.querySelectorAll(".card-product-infos")[0].querySelectorAll(".wine-name-cart")[0].innerHTML === "Sweet Secret") {
    x.querySelectorAll(".fruit-img")[0].classList.add("sweet-secret-background");
  }

  else if (x.querySelectorAll(".card-product-infos")[0].querySelectorAll(".wine-name-cart")[0].innerHTML === "Exotic Foreplay") {
    x.querySelectorAll(".fruit-img")[0].classList.add("exotic-foreplay-background");
  }

  else if (x.querySelectorAll(".card-product-infos")[0].querySelectorAll(".wine-name-cart")[0].innerHTML === "Fruity Fetish") {
    x.querySelectorAll(".fruit-img")[0].classList.add("fruity-fetish-background");
  }

  else if (x.querySelectorAll(".card-product-infos")[0].querySelectorAll(".wine-name-cart")[0].innerHTML === "Heavy Hickey") {
    x.querySelectorAll(".fruit-img")[0].classList.add("heavy-hickey-background");
  }

  else if (x.querySelectorAll(".card-product-infos")[0].querySelectorAll(".wine-name-cart")[0].innerHTML === "Flavorful Flirt") {
    x.querySelectorAll(".fruit-img")[0].classList.add("flavorful-flirt-background");
  }

  else if (x.querySelectorAll(".card-product-infos")[0].querySelectorAll(".wine-name-cart")[0].innerHTML === "Rich Confession") {
    x.querySelectorAll(".fruit-img")[0].classList.add("rich-confession-background");
  }
}

product.forEach(x => checkconditionfour(x))




</script>











